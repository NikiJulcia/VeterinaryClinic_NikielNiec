@model VeterinaryClinic.Models.ViewModels.VisitPatientVet

@{
    ViewBag.Title = "Details";
}

<h2>Szczegóły</h2>

<div>
    <h4>Wizyta</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Visit.Date)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Visit.Date)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Visit.Diagnosis)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Visit.Diagnosis)
        </dd>
        <dt>
            Pacjent
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Patient.Species)
            @Html.DisplayFor(model => model.Patient.Name)
        </dd>
        <dt>
            Weterynarz
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Vet.Name)
            @Html.DisplayFor(model => model.Vet.Surname)
            @Html.DisplayFor(model => model.Vet.Specjalization)
        </dd>

    </dl>
</div>
<p>
    @Html.ActionLink("Edytuj", "Edit", new { id = Model.Visit.Id }) |
    @Html.ActionLink("Wróć do listy wizyt", "Index")
</p>
